---
import { Image } from "@astrojs/image/components";

export interface Props {
  title: string;
  image: string;
  content?: string;
  location?: string;
}

const { title, image, content, location } = Astro.props;
---

<div
  class="flex flex-col items-center p-8 transition-colors duration-200 transform cursor-pointer group hover:bg-primary rounded-xl"
>
  <Image
    class="object-cover w-32 h-32 rounded-full ring-4 ring-gray-300"
    src={image}
    alt=""
    format="webp"
    height={128}
    width={128}
  />

  <h1
    class="mt-4 text-2xl font-semibold text-gray-700 capitalize dark:text-white group-hover:text-white"
  >
    {title}
  </h1>

  <p
    class="mt-2 text-center text-gray-500 capitalize dark:text-gray-300 group-hover:text-gray-300"
  >
    {content}<br />
    {location}
  </p>
</div>
