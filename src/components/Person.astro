---
import { Image } from "astro:assets";

export interface Props {
  title: string;
  image: string;
  content?: string;
  location?: string;
  size?: "big";
  float?: "left" | "right";
  center: boolean;
  form?:"square"|"circle;"
}

const { title, image, content, location, size, float,form, center } = Astro.props;

let mainClass = "";

if (float) {
  mainClass += `float-${float} `;
}

let imageClass="portrait-image"

if (size==="big") {
  imageClass="portrait-image-big"
}

let formClass="rounded-full"
if(form==="square"){
  formClass="rounded-lg"
}
---

<div
  class={`${mainClass}flex flex-col items-center p-6 transition-colors duration-200 transform cursor-pointer group hover:bg-primary rounded-xl`}
>
  <div class={imageClass}>
    <Image
      class={`${formClass} object-cover"`}
      src={image}
      alt=""
      format="webp"
      height={300}
      width={300}
    />
  </div>

  <h1
    class="mt-4 text-2xl text-center font-semibold text-gray-700 capitalize dark:text-white group-hover:text-white"
  >
    {title}
  </h1>

  <p
    class="mt-2 text-center text-gray-500 capitalize dark:text-gray-300 group-hover:text-gray-300"
  >
    {content}
    {location && <br />}
    {location}
  </p>
</div>

<style scoped>
img{
  height:100% !important;
  width:100% !important;
}

.portrait-image{
  height:170px !important;
  width:170px !important;
}

.portrait-image-big{
  height:300px !important;
  width:300px !important;
}

</style>
