      ---
import type actu from "../../interfaces/actu"
import Actu from "../Actu.astro"
import { Image } from "astro:assets";
import imageActu from "../../assets/img/photos/parada2.jpg";

export interface Props {
    actus:Array<actu>;
}

const {actus} = Astro.props;

---
      
      <div class="my-8 text-left bg-primaryLight">
        <div class="container mx-auto px-6 py-10">
            <div class="md:flex m-6">
                <div class="md:w-3/5 text-left">
                    <section>
                        <h2 class="text-3xl">Quand est-ce qu'on danse ?</h2>
                        <p class="text-2xl">Nos prochains événements de tango argentin du côté Crémieu</p>
                        {actus.map((actu) => (
                        <Actu actu={actu} />
                        ))}
                    </section>  
                </div>
                <div class="flex-1 md:w-2/5 hidden md:block">
                    <Image
                    class="object-cover h-96 w-full rounded-lg"
                    src={imageActu}
                    width={400}
                    format="webp"
                    alt="Deux personnes discutent"
                    />
                </div>
            </div>
        </div>
      </div>