---
import { Image } from "astro:assets";

export interface Props {
	title: string;
	subtitle: string;
	image: ImageMetadata;
    href:string
}

const { href, title, subtitle,image } = Astro.props;
---

<div class="relative my-6">
      <a href={href}>
        <div class="absolute bg-black opacity-20 h-full w-full rounded"></div>
        <div
          class="absolute flex items-center justify-center text-white h-full w-full"
        >
          <div>
            <p class="text-4xl title">{title}</p>
            <p class="text-xl -mt-8">{subtitle}</p>
          </div>
        </div>

        <div>
          <Image
            class="object-cover h-72 w-full rounded-lg"
            src={image}
            width={350}
            format="webp"
            alt="Pratique de tango"
          />
        </div>
      </a>
    </div>